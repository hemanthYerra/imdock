FROM phpdockerio/php56-fpm:latest

# Install selected extensions and other stuff
RUN apt-get update \
    && apt-get -y --no-install-recommends install  php5-memcached php5-mongo php5-mysql php5-pgsql php5-redis php5-sqlite php5-gd php5-pecl-http php5-imap php5-imagick php5-memcache php5-odbc php5-radius php5-ssh2 php5-sybase php5-xdebug php5-xmlrpc php5-xsl \
    && apt-get clean; rm -rf /var/lib/apt/lists/* /tmp/* /var/tmp/* /usr/share/doc/*


WORKDIR "/var/www/smartdocker"